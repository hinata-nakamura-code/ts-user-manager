{
  "compilerOptions": {
    /* 出力/入力レイアウト */
    "rootDir": "./src",
    "outDir": "./dist",

    /* モジュール＆解決方法（Nodeの最新挙動に合わせる） */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* 生成するJSのターゲット（十分に新しめ、でも互換性あり） */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    /* 型チェックの推奨セット */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* 相互運用＆品質 */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* ビルド体験 */
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
